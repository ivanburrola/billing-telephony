gem "mongo"

# capistrano
gem "capistrano", "~> 3.1.0"
gem "capistrano-rvm"

# Resque for Queueing jobs
gem "rake"
gem "resque"

# For debugging
gem "pry"

# For code profiling
gem "ruby-prof"
